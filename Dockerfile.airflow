FROM apache/airflow:2.7.1

USER root

# Install Docker CLI (latest version)
RUN apt-get update && \
    apt-get install -y curl && \
    curl -fsSL https://get.docker.com -o get-docker.sh && \
    sh get-docker.sh && \
    rm get-docker.sh

# Install docker-compose v2
RUN curl -L "https://github.com/docker/compose/releases/download/v2.24.0/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose && \
    chmod +x /usr/local/bin/docker-compose

USER airflow

# Install AWS provider for Glue operations and boto3 for AWS SDK
RUN pip install --no-cache-dir \
    apache-airflow-providers-amazon==8.13.0 \
    boto3==1.34.34
